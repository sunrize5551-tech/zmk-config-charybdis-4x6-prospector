#define INPUT_REL_X 0x00
#define INPUT_REL_Y 0x01

/*
 * Fix for Zephyr 4.1 pixart,pmw3610 binding:
 * - zephyr,axis-x (required)
 * - zephyr,axis-y (highly likely required too)
 * - motion-gpios (required in this binding set)
 *
 * Keep bus + CS + motion pin as you were using (no guessing wiring yet).
 */

&pro_micro_spi {
    status = "okay";

    cs-gpios = <&gpio0 20 GPIO_ACTIVE_LOW>;

    trackball: trackball@0 {
        status = "okay";
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;

        /* Required by binding */
        motion-gpios = <&gpio0 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;

        /* Required by binding (this is the error you're seeing) */
        zephyr,axis-x = <INPUT_REL_X>;
        zephyr,axis-y = <INPUT_REL_Y>;

        /* Optional; safe default */
        cpi = <800>;
    };
};
